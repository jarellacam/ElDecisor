{
  "manifest_version": 3,
  "name": "El Decisor - Comparador IA",
  "version": "1.0",
  "description": "Tu copiloto de compras.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:8000/*", 
    "https://*.amazon.es/*",
    "https://*.temu.com/*",
    "https://*.shein.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.es/*", "https://*.temu.com/*", "https://*.shein.com/*"],
      "js": ["content.js"]
    }
  ]
}